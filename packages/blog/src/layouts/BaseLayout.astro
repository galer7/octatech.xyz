---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Engineering insights from Octatech" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | Octatech Blog</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={Astro.url.href} />
  </head>
  <body class="antialiased bg-neutral-950 text-white min-h-screen">
    <header class="sticky top-0 z-30 backdrop-blur-md bg-neutral-950/70 border-b border-white/10">
      <div class="max-w-4xl mx-auto px-6">
        <div class="flex items-center justify-between h-16">
          <a href="/" class="inline-flex items-center gap-2 text-white/70 hover:text-white transition-colors text-sm">
            ← Back to Octatech
          </a>
          <a href="/blog" class="text-base font-semibold tracking-tight">
            Octatech Blog
          </a>
          <a href="/blog/rss.xml" class="text-white/70 hover:text-white transition-colors text-sm">
            RSS
          </a>
        </div>
      </div>
    </header>
    <main class="max-w-4xl mx-auto px-6 py-12">
      <slot />
    </main>
    <footer class="border-t border-white/10 mt-16">
      <div class="max-w-4xl mx-auto px-6 py-8 text-center text-sm text-white/60">
        © {new Date().getFullYear()} Octatech Inc. | <a href="/" class="hover:text-white">octatech.xyz</a>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>

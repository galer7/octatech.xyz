{
  "name": "@octatech/crm",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Octatech CRM backend - lead management, API, and admin UI",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:admin": "cd admin && npm run dev",
    "build": "npm run build:admin && tsc",
    "build:admin": "cd admin && npm install && npm run build",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "@hono/node-server": "^1.13.0",
    "drizzle-orm": "^0.38.0",
    "postgres": "^3.4.5",
    "@node-rs/argon2": "^2.0.2",
    "openai": "^4.76.0",
    "resend": "^4.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "drizzle-kit": "^0.30.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "eslint": "^9.12.0",
    "@eslint/js": "^9.13.0",
    "typescript-eslint": "^8.9.0"
  }
}

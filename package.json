{
  "name": "octatech",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:crm": "npm run dev -w @octatech/crm",
    "dev:blog": "npm run dev -w @octatech/blog",
    "build:crm": "npm run build -w @octatech/crm",
    "build:blog": "npm run build -w @octatech/blog",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

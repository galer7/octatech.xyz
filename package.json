{
	"name": "octatech",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev:crm": "pnpm --filter @octatech/crm dev",
		"dev:admin": "pnpm --filter @octatech/crm-admin dev",
		"dev:blog": "pnpm --filter @octatech/blog dev",
		"build:crm": "pnpm --filter @octatech/crm build",
		"build:admin": "pnpm --filter @octatech/crm-admin build",
		"build:blog": "pnpm --filter @octatech/blog build",
		"build": "pnpm -r run build",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"test": "pnpm -r --if-present run test",
		"typecheck": "pnpm -r --if-present run typecheck",
		"audit:security": "pnpm audit --audit-level=moderate"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@vitejs/plugin-react": "5.1.3",
		"typescript": "^5.7.0",
		"vite": "^6.4.1"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
